<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Ihr Freund teilt immoment eine Route live. Möchten Sie sein Profil ansehen oder zu seiner Liveübertragung wechseln?" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <!-- Profil Button -->
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_dsgvo"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorGreenAccent"
                    android:padding="12dp"
                    android:text="Profil"
                    android:textColor="@color/ap_white" />
            </LinearLayout>

            <!-- Live Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_live"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_dsgvo"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorGreenAccent"
                    android:padding="12dp"
                    android:text="Liveübertragung"
                    android:textColor="@color/ap_white" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>