<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            style="@style/VerticalThemeLayoutInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_delete_account_title"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ãœbertragung von Max Mustermann" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:background="?android:attr/listDivider" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <org.osmdroid.views.MapView
                android:id="@+id/mapview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"></org.osmdroid.views.MapView>

            <LinearLayout
                android:id="@+id/main"
                style="@style/Main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_weight="0"
                android:background="@drawable/shape"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="35dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/average_speed_Layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/average_speed_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/record_average_speed_white" />

                            <TextView
                                android:id="@+id/average_speed_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="0.0 km/h"
                                style="@style/TextAppearanceRecord"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/distance_Layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/distance_Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                app:srcCompat="@drawable/record_distance_white" />

                            <TextView
                                android:id="@+id/distance_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="0.0 km"
                                style="@style/TextAppearanceRecord"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/altimeter_Layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/altimeter_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/record_altimeter_white" />

                            <TextView
                                android:id="@+id/altimeter_TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="0.0 m"
                                style="@style/TextAppearanceRecord" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/other_Layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/accuracy_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/ic_signal_cellular_0_bar_black_24dp" />

                            <TextView
                                android:id="@+id/accuracy_TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="--"
                                style="@style/TextAppearanceRecord" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="-15dp"
            app:fabSize="normal"
            app:layout_anchor="@id/mapview"
            app:layout_anchorGravity="bottom|center"
            app:srcCompat="@drawable/activity_running_record" />
    </android.support.design.widget.CoordinatorLayout>

    <Button
        android:id="@+id/compBtn"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="9dp"
        android:alpha="0"
        android:text=""
        tools:ignore="RtlCompat" />

</FrameLayout>