<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreenLight</item>
        <item name="colorSecondary">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="colorButtonNormal">@color/colorWhite</item>

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:statusBarColor">@color/colorGreenDark</item>
        <item name="android:navigationBarColor">@color/colorGreenDark</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorGreyLight</item>
        <item name="colorSecondary">@color/colorGreyDark</item>
        <item name="colorAccent">@color/colorGreyAccent</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorButtonNormal">@color/colorBlack</item>

        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorGreyDark</item>
        <item name="android:navigationBarColor">@color/colorGreyDark</item>
    </style>
</resources>