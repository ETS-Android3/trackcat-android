<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.mobcom.group3.gotrack.MyMap
            android:id="@+id/mapview"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:clickable="true" />

        <LinearLayout
            android:id="@+id/name_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/record_average_speed_white" />

            <TextView
                android:id="@+id/name_TextView"
                style="@style/TextAppearanceRecord"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Waldrunde" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/average_speed_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/average_speed_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/record_average_speed_white" />

            <TextView
                android:id="@+id/average_speed_TextView"
                style="@style/TextAppearanceRecord"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="0.0 km/h" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/real_average_speed_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/real_average_speed_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/record_average_speed_white" />

            <TextView
                android:id="@+id/real_average_speed_TextView"
                style="@style/TextAppearanceRecord"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="0.0 km/h" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/distance_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/distance_Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/record_distance_white" />

            <TextView
                android:id="@+id/distance_TextView"
                style="@style/TextAppearanceRecord"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="0.0 km" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/altimeter_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/altimeter_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/record_altimeter_white" />

            <TextView
                android:id="@+id/altimeter_TextView"
                style="@style/TextAppearanceRecord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.0 m" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_time_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/total_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/record_altimeter_white" />

            <TextView
                android:id="@+id/total_time_TextView"
                style="@style/TextAppearanceRecord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.0 m" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/real_time_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/real_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/record_altimeter_white" />

            <TextView
                android:id="@+id/real_time_TextView"
                style="@style/TextAppearanceRecord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.0 m" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/max_speed_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/max_speed_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/record_altimeter_white" />

            <TextView
                android:id="@+id/max_speed_TextView"
                style="@style/TextAppearanceRecord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.0 m" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

