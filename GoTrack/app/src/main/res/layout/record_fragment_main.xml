<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for RecordFragmet with Map -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.osmdroid.views.MapView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mapview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true">

        </org.osmdroid.views.MapView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/darkBackground"
            android:orientation="vertical"
            android:padding="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:id="@+id/activity_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/activity_running_white" />

                <TextView
                    android:id="@+id/activity_type"
                    android:layout_width="63dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Laufen"
                    android:textColor="@color/lightTxt" />
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="0">

            </android.support.v4.view.ViewPager>


            <LinearLayout
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/average_speed_Layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="50dp">

                    <ImageView
                        android:id="@+id/average_speed_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/record_average_speed_white" />

                    <TextView
                        android:id="@+id/average_speed_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="7,56 km/h"
                        android:textColor="@color/lightTxt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/distance_Layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <ImageView
                        android:id="@+id/distance_Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:srcCompat="@drawable/record_average_speed_white" />

                    <TextView
                        android:id="@+id/distance_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lightTxt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/altimeter_Layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="50dp">

                    <ImageView
                        android:id="@+id/altimeter_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/record_average_speed_white" />

                    <TextView
                        android:id="@+id/altimeter_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="7,56 km/h"
                        android:textColor="@color/lightTxt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/other_Layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <ImageView
                        android:id="@+id/other_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/record_average_speed_white" />

                    <TextView
                        android:id="@+id/other_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="7,56 km/h"
                        android:textColor="@color/lightTxt" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/play_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center_horizontal"
        app:srcCompat="@drawable/ic_play_circle_filled_white_24dp" />
</FrameLayout>