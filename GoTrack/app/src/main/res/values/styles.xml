<?xml version="1.0" encoding="utf-8"?>
<resources>

    // Light Mode
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreenLight</item>
        <item name="colorSecondary">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>

        <item name="android:textColor">@color/colorBlack</item>
    </style>

    // Dark Mode
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorGreyLight</item>
        <item name="colorSecondary">@color/colorGreyDark</item>
        <item name="colorAccent">@color/colorGreyAccent</item>

        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Main" parent="">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/roundCornersRecord</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.AppCompat" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>