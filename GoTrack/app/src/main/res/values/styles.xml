<?xml version="1.0" encoding="utf-8"?>
<resources>

    // Light Mode
    <style name="AppTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorDefaultText</item>
    </style>

    // Dark Mode
    <style name="AppTheme.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>

        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorDefaultTextDark</item>
    </style>
</resources>