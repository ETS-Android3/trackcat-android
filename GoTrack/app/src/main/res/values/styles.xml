<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    // Light Mode
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreenLight</item>
        <item name="colorSecondary">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="colorButtonNormal">@color/colorWhite</item>

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorGreenDark</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorGreenDark</item>
    </style>

    // Dark Mode
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorGreyLight</item>
        <item name="colorSecondary">@color/colorGreyDark</item>
        <item name="colorAccent">@color/colorGreyAccent</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorButtonNormal">@color/colorBlack</item>

        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorGreyDark</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorGreyDark</item>
    </style>

    <style name="Main" parent="">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/roundCornersRecord</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.AppCompat" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="VerticalThemeLayoutInputs">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TitleBarImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>